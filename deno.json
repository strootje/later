{
  "tasks": {
    "dev": "vite dev",
    "build": "vite build"
  },

  "allowScripts": [
    "npm:@parcel/watcher",
    "npm:@sentry/cli"
  ],

  "nodeModulesDir": "auto",
  "workspace": ["pkgs/**"],
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "solid-js",
    "module": "preserve",
    "lib": ["deno.ns", "dom"],
    "types": [
      "./src/virtual.d.ts"
    ]
  },

  "fmt": {
    "lineWidth": 120
  },

  "lint": {
    "plugins": ["jsr:@ryu/deno-lint-plugin-tailwindcss@0.2.0"]
  }
}
